{
    "extends": "@tsconfig/docusaurus/tsconfig.json",
    "include": [
        "src/",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ],
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}